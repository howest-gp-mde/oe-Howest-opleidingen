<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SP.ViewModel"
             x:Class="SP.StudyProgrammesPage">
    <!--<ContentPage.BindingContext>
        <local:StudyProgrammesViewModel></local:StudyProgrammesViewModel>
    </ContentPage.BindingContext>-->
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Style="{StaticResource hero}" Text="{Binding Title}"></Label>
                <ListView ItemsSource="{Binding Path=StudyProgrammes}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="{Binding Image}"></Image>
                                    <StackLayout Orientation="Vertical">
                                        <Label Text="{Binding Title}"></Label>
                                        <Label Text="{Binding Type}"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
           
        </ScrollView>
    </ContentPage.Content>
</ContentPage>